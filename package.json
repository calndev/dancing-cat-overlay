{
  "name": "dancing-cat-overlay",
  "version": "1.0.0",
  "description": "A draggable, resizable, animated cat overlay",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-packager . --overwrite --platform=win32 --arch=x64 --out=dist --prune=true",
    "dist": "electron-builder",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder"
  },
  "build": {
    "appId": "com.example.dancing-cat",
    "win": {
      "target": "nsis",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/.cache/**/*"
    ]
  },
  "keywords": [],
  "author": "@calndev",
  "license": "ISC",
  "devDependencies": {
    "electron": "^34.5.8",
    "electron-builder": "^26.4.0",
    "electron-packager": "^17.1.2"
  }
}
